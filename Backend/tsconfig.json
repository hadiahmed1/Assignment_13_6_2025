{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "node",
        "outDir": "dist",
        "rootDir": ".", // script.ts is in project root
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "script.ts",
        "prisma",
        "Backend/**/*.ts"
    ], // adjust as needed
    "exclude": [
        "node_modules"
    ]
}